{% extends 'Admin/layout.html.twig' %}

{% block main_content %}
    <p>{{ box.title }} | {{ box.budget }} | {{ box.user.lastName }} | {{ box.status }} | <a href="{{ url('admin_box_edit', {id: box.id}) }}">{{ 'admin.panel.box.edit'|trans }}</a> | <a href="{{ url('admin_box_edit_products', {id: box.id}) }}">{{ 'admin.panel.box.editproducts'|trans }}</a></p>

    {% if boxProducts %}
        {% for boxProduct in boxProducts %}
            <div>
                <p>{{ boxProduct.product.label }}</p>
                <p>{{ boxProduct.product.description }}</p>
                <p>{{ boxProduct.product.price }}</p>
                <p>{{ boxProduct.quantity }}</p>
                {% if boxProduct.receptionDate %}
                    <p>{{ boxProduct.receptionDate }}</p>
                {% endif %}
                {% if boxProduct.valid %}
                    <p>{{ boxProduct.valid }}</p>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}

